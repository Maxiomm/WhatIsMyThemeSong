{
  "expo": {
    "name": "What Is My Theme Song ?",
    "slug": "What Is My Theme Song ?",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.maximerollin.WhatIsMyThemeSong",
      "infoPlist": {
        "NSCameraUsageDescription": "Nous avons besoin d'accéder à votre caméra pour prendre des photos.",
        "NSPhotoLibraryUsageDescription": "Nous avons besoin d'accéder à votre galerie pour ajouter des photos.",
        "NSPhotoLibraryAddUsageDescription": "Nous avons besoin d'accéder à votre galerie pour enregistrer des photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.maximerollin.WhatIsMyThemeSong",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "packagerOpts": {
        "hostType": "localhost",
        "dev": true,
        "minify": false
    }
  }
}
